<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <HC_PayByFinance>
            <version>1.0.5</version>
        </HC_PayByFinance>
    </modules>
    <global>
        <blocks>
            <paybyfinance>
                <class>HC_PayByFinance_Block</class>
            </paybyfinance>
        </blocks>

        <helpers>
            <paybyfinance>
                <class>HC_PayByFinance_Helper</class>
            </paybyfinance>
        </helpers>

        <models>
            <paybyfinance>
                <class>HC_PayByFinance_Model</class>
                <resourceModel>paybyfinance_mysql4</resourceModel>
            </paybyfinance>
            <paybyfinance_mysql4>
                <class>HC_PayByFinance_Model_Mysql4</class>
                <entities>
                    <service>
                        <table>paybyfinance_service</table>
                    </service>
                    <log>
                        <table>paybyfinance_log</table>
                    </log>
                </entities>
            </paybyfinance_mysql4>

            <paypal>
                <rewrite>
                    <api_nvp>HC_PayByFinance_Model_Paypal_Api_Nvp</api_nvp>
                    <hostedpro_request>HC_PayByFinance_Model_Paypal_Hostedpro_Request</hostedpro_request>
                </rewrite>
            </paypal>
            <paypaluk>
                <rewrite>
                    <api_nvp>HC_PayByFinance_Model_PaypalUk_Api_Nvp</api_nvp>
                </rewrite>
            </paypaluk>

        </models>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <paybyfinance_enable />
                    </product_attributes>
                </item>
                <totals>
                    <financeamount>
                        <class>paybyfinance/sales_quote_financeamount</class>
                        <after>subtotal,shipping,discount</after>
                        <before>grand_total</before>
                    </financeamount>
                    <paybyfinance_totalcost>
                        <class>paybyfinance/sales_quote_totalcost</class>
                        <after>subtotal,shipping,discount</after>
                        <before>grand_total</before>
                    </paybyfinance_totalcost>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <financeamount>
                        <class>paybyfinance/sales_order_invoice_financeamount</class>
                        <after>subtotal,shipping,discount</after>
                        <before>grand_total</before>
                    </financeamount>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <financeamount>
                        <class>paybyfinance/sales_order_creditmemo_financeamount</class>
                        <after>subtotal,shipping,discount</after>
                        <before>grand_total</before>
                    </financeamount>
                </totals>
            </order_creditmemo>
        </sales>
        <fieldsets>
            <sales_convert_quote_item>
                <paybyfinance_enable>
                    <to_order_item>*</to_order_item>
                </paybyfinance_enable>
            </sales_convert_quote_item>
            <sales_convert_order_item>
                <paybyfinance_enable>
                    <to_quote_item>*</to_quote_item>
                </paybyfinance_enable>
            </sales_convert_order_item>
        </fieldsets>
        <resources>
            <paybyfinance_setup>
                <setup>
                    <module>HC_PayByFinance</module>
                    <class>HC_PayByFinance_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </paybyfinance_setup>
            <paybyfinance_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </paybyfinance_write>
            <paybyfinance_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </paybyfinance_read>
        </resources>

        <events>
            <paybyfinance_services_modified>
                <observers>
                    <paybyfinance>
                        <type>singleton</type>
                        <class>paybyfinance/observer</class>
                        <method>enterpriseCacheClear</method>
                    </paybyfinance>
                </observers>
            </paybyfinance_services_modified>
            <checkout_onepage_controller_success_action>
                <observers>
                    <paybyfinance_checkout_success_action>
                        <type>singleton</type>
                        <class>paybyfinance/observer</class>
                        <method>checkoutSuccess</method>
                    </paybyfinance_checkout_success_action>
                </observers>
            </checkout_onepage_controller_success_action>
            <sales_convert_quote_address_to_order>
                <observers>
                    <paybyfinance_salesquoteaddressconvert>
                        <type>singleton</type>
                        <class>paybyfinance/observer</class>
                        <method>convertQuoteAddressToOrder</method>
                    </paybyfinance_salesquoteaddressconvert>
                </observers>
            </sales_convert_quote_address_to_order>
            <sales_quote_item_set_product>
                <observers>
                    <paybyfinance_enable>
                        <class>paybyfinance/observer</class>
                        <method>salesQuoteItemSetPaybyfinanceEnable</method>
                    </paybyfinance_enable>
                </observers>
            </sales_quote_item_set_product>
            <paybyfinance_quote_financeamount_collect_before>
                <observers>
                    <paybyfinance_collectafter>
                        <type>singleton</type>
                        <class>paybyfinance/sessionobserver</class>
                        <method>collectAfter</method>
                    </paybyfinance_collectafter>
                </observers>
            </paybyfinance_quote_financeamount_collect_before>
            <sales_order_save_after>
                <observers>
                    <paybyfinance_salesordersaveObserver>
                        <type>singleton</type>
                        <class>paybyfinance/observer</class>
                        <method>orderAfterSave</method>
                    </paybyfinance_salesordersaveObserver>
                </observers>
            </sales_order_save_after>
            <sales_order_shipment_save_after>
                <observers>
                    <paybyfinance_salesordershipmentsaveObserver>
                        <type>singleton</type>
                        <class>paybyfinance/observer</class>
                        <method>orderShipmentAfterSave</method>
                    </paybyfinance_salesordershipmentsaveObserver>
                </observers>
            </sales_order_shipment_save_after>
            <sales_order_payment_cancel>
                <observers>
                    <paybyfinance_salesorderCancel>
                        <type>singleton</type>
                        <class>paybyfinance/observer</class>
                        <method>orderPaymentCancel</method>
                    </paybyfinance_salesorderCancel>
                </observers>
            </sales_order_payment_cancel>
            <paypal_prepare_line_items>
                <observers>
                    <hc_paypalpreparelineitemsObserver>
                        <type>singleton</type>
                        <class>paybyfinance/observer</class>
                        <method>paypalPrepareLineItems</method>
                    </hc_paypalpreparelineitemsObserver>
                </observers>
            </paypal_prepare_line_items>
        </events>

    </global>

    <frontend>
        <layout>
            <updates>
                <hc_paybyfinance>
                    <file>paybyfinance.xml</file>
                </hc_paybyfinance>
            </updates>
        </layout>
        <routers>
            <hc_paybyfinance>
                <use>standard</use>
                <args>
                    <module>HC_PayByFinance</module>
                    <frontName>paybyfinance</frontName>
                </args>
            </hc_paybyfinance>
        </routers>
        <events>
            <catalog_product_collection_load_after>
                <observers>
                    <hc_paybyfinance_product_collection_load_after>
                        <type>singleton</type>
                        <class>paybyfinance/observer</class>
                        <method>collectionLoadAfter</method>
                    </hc_paybyfinance_product_collection_load_after>
                </observers>
            </catalog_product_collection_load_after>
        </events>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <hc_paybyfinance>
                    <file>paybyfinance.xml</file>
                </hc_paybyfinance>
            </updates>
        </layout>
        <events>
            <payment_info_block_prepare_specific_information>
                <observers>
                    <hc_payment_info_specifics>
                        <class>paybyfinance/observer</class>
                        <method>getPaymentInfo</method>
                    </hc_payment_info_specifics>
                </observers>
            </payment_info_block_prepare_specific_information>
        </events>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <use>admin</use>
                <args>
                    <modules>
                        <paybyfinance before="Mage_Adminhtml">HC_PayByFinance_Adminhtml</paybyfinance>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <default>
        <hc_paybyfinance>
            <general>
                <active>1</active>
                <minimum_price_product>500</minimum_price_product>
                <minimum_price_basket>500</minimum_price_basket>
                <enable_producttypes>simple</enable_producttypes>
                <fixed_deposit>0</fixed_deposit>
                <include_shipping>1</include_shipping>
                <address_checked>0</address_checked>
                <wizard>0</wizard>
            </general>
            <order_status>
                <accepted>finance_accepted</accepted>
                <referred>finance_referred</referred>
                <declined>finance_declined</declined>
                <abandoned>finance_abandoned</abandoned>
                <error>finance_error</error>
            </order_status>
            <blocks_info>
                <information>finance_information</information>
            </blocks_info>
            <account>
                <connectionmode>test</connectionmode>
                <id1></id1>
                <id2></id2>
                <erroremail></erroremail>
                <retailername>{Retailer Name as appears on FCA register}</retailername>
                <tradingname>trading as {Trading Name}</tradingname>
            </account>
        </hc_paybyfinance>
    </default>
</config>
